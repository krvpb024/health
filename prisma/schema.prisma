datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model account {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  // profile  profile?
}

model session {
  id        String   @id
  expire_at DateTime @db.Timestamptz
}

